# OpenAI API Keys
# Copy this file to .env and add your actual API keys
# You can get your API key from: https://platform.openai.com/api-keys

# Main OpenAI API Key (used by default for all pages)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Separate API key for Guest Post page (gp.html)
# If not set, OPENAI_API_KEY will be used
OPENAI_API_KEY_GP=

# Optional: Separate API key for Index page (index.html)
# If not set, OPENAI_API_KEY will be used
OPENAI_API_KEY_INDEX=

# Server Port (default: 3000)
PORT=3000
